        "react-dnd-scrolling": "^1.3.3",
        "react-dnd-touch-backend": "^14.1.1",
        "react-dom": "^16.14.0",
        "react-hot-keys": "^2.7.3",
        "react-hotkeys-hook": "^3.4.7",
        "react-intl": "^5.25.1",
        "react-redux": "^7.2.9",
        "react-router-dom": "^5.3.4",
        "react-select": "^5.8.0",
        "trim-newlines": "^4.1.1"
