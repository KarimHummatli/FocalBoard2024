        "eslint-plugin-header": "3.1.1",
        "eslint-plugin-import": "2.25.4",
        "eslint-plugin-jquery": "1.5.1",
        "eslint-plugin-mattermost": "github:mattermost/eslint-plugin-mattermost#23abcf9988f7fa00d26929f11841aab7ccb16b2b",
